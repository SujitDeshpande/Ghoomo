<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".ui.userinterface.NewTrip"
    tools:showIn="@layout/activity_new_trip"
    android:orientation="vertical">

    <EditText
        android:id="@+id/new_trip_grp_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/group_name"
        android:textSize="@dimen/text_size_small"
        android:singleLine="true"/>

    <EditText
        android:id="@+id/new_trip_from_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/start_date"
        android:textSize="@dimen/text_size_small"
        android:focusable="false"/>

    <EditText
        android:id="@+id/new_trip_to_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/end_date"
        android:textSize="@dimen/text_size_small"
        android:focusable="false"/>

    <TextView
        android:id="@+id/new_trip_source"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size_small"
        android:text="Source"
        android:focusable="false"
        />

    <TextView
        android:id="@+id/new_trip_destination"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size_small"
        android:text="Destination"
        android:focusable="false"
        />

    <Button
        android:id="@+id/new_trip_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/submit"
        android:textColor="@color/color_white"
        android:textSize="@dimen/text_size_small"/>
    <!--<android.support.v7.widget.RecyclerView-->
        <!--android:id="@+id/new_trip_rv"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent">-->
    <!--</android.support.v7.widget.RecyclerView>-->
</LinearLayout>
